# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/refmd

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the API server
PORT=8888

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# Secret key for JWT token signing (change this in production!)
JWT_SECRET=your-secret-key-change-this-in-production
# JWT token expiry time
JWT_EXPIRY=3600
# Refresh token expiry time
REFRESH_TOKEN_EXPIRY=604800

# -----------------------------------------------------------------------------
# Password Hashing
# -----------------------------------------------------------------------------
# Bcrypt cost factor (10-12 is recommended for production)
BCRYPT_COST=12

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file upload size in bytes (10MB = 10485760)
MAX_UPLOAD_SIZE=10485760
# Directory for storing uploaded files
UPLOAD_DIR=./uploads

# -----------------------------------------------------------------------------
# Git Sync Configuration
# -----------------------------------------------------------------------------
# Enable Git synchronization feature
GIT_SYNC_ENABLED=false
# Enable automatic Git sync on document save
GIT_AUTO_SYNC=false
# Git sync interval in seconds (300 = 5 minutes)
GIT_SYNC_INTERVAL=300